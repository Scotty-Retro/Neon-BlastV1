<theme>
   <formatVersion>7</formatVersion>

     <view name="system">

<carousel name="systemcarousel">
<defaultTransition>fade</defaultTransition>
<zIndex>999</zIndex>
<maxLogoCount>7</maxLogoCount>
<color>ffffff00</color>
<colorEnd>ffffff00</colorEnd>
<color>00000000</color>
<colorEnd>00000000</colorEnd>
<logoSize>0.15 0.15</logoSize>
<logoScale>2</logoScale>
<size>1 1</size>
<pos>0 0.20</pos>
</carousel>


     <text name="systemInfo">
	    <glowColor>000000</glowColor>
        <pos>-0.38 0.3</pos>
        <backgroundColor>00000000</backgroundColor>
        <color>ffffff</color>
        <fontPath>./_inc/fonts/FS_JC_bsicaunicode.ttf</fontPath>
	    <fontSize>0.040</fontSize>
        <storyboard>
        <animation property="y" from="0.05" begin="0" duration="750" mode="easeOut"/>
        <animation property="opacity" from="0" to="1" duration="750" mode="easeIn"/>
        <animation property="scale" from="0" to="1" duration="750" mode="easeOut"/>
        </storyboard>
        <zIndex>999</zIndex>
     </text> 


	<image name="menu10frames" extra="true">
        <pos>0.5 0.4</pos>
        <maxSize>0.85 0.85</maxSize>
        <origin>0.5 0.5</origin>
		<path>./_inc/menu2frames/menu2-d.png</path>
		<path>./_inc/menu2frames/${system.theme}.png</path>
		<color>ffffff</color>
	    <zIndex>998</zIndex>
	</image>

	   <image name="clearlogo" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>0.26 0.25</size>
	 <path>./_inc/clearlogos/${system.theme}.png</path>
		 <zIndex>999</zIndex>
		<storyboard> 
        <animation property="y" from="0.5" begin="0" duration="1000" mode="Bump"/>
        <animation property="scale" to="1.02" begin="1100" autoreverse="true" duration="300" repeat="forever" mode="easyIn"/>
		</storyboard>
      </image>
	  

	       <helpsystem name="help">
	 <iconColor>FFFFFF</iconColor>
     <fontSize>0.04</fontSize>
     <origin>0.5 0.5</origin>
     <pos>0.50 0.98</pos>
     <fontPath>./_inc/FS_JC_bsicaunicode.ttf</fontPath>
     </helpsystem>
		
      <video name="backgroundvideo" extra="true">
        <default>./_inc/assets/noise.mp4</default>
        <visible>true</visible>
        <path>{random}</path>               
        <pos>0.5 0.315</pos>
        <origin>0.5 0.5</origin>
        <size>0.51 0.51</size>
       <roundCorners>0.04</roundCorners>
        <delay>0.2</delay>
        <showSnapshotNoVideo>false</showSnapshotNoVideo>
        <showSnapshotDelay>false</showSnapshotDelay>
        <color>FFFFFF</color>
        <storyboard>
        <animation property="y" from="0.05" begin="0" duration="350" mode="easeOut"/>
        <animation property="opacity" from="0" to="1" duration="350" mode="easeIn"/>
        <animation property="scale" from="0" to="1" duration="350" mode="easeOut"/>
        </storyboard>
        <zIndex>20</zIndex>
     </video>

     </view>
     </theme>
