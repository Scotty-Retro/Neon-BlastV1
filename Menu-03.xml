<theme>
   <formatVersion>7</formatVersion>

     <view name="system">

     <carousel name="systemcarousel">
		<type>vertical</type>
		<pos>0.015 0</pos>
		<size>1 1</size>
		<origin>0 0</origin>
		<color>00000000</color>
		<logoSize>0.163 0.163</logoSize>
		<logoAlignment>right</logoAlignment>
		<maxLogoCount>7</maxLogoCount>
		<defaultTransition>instant</defaultTransition>	
		<zIndex>50</zIndex>
	 </carousel>


     <text name="systemInfo">
	    <glowColor>000000</glowColor>
        <pos>-0.12 0.89</pos>
        <backgroundColor>00000000</backgroundColor>
        <color>ffffff</color>
        <fontPath>./_inc/fonts/FS_JC_bsicaunicode.ttf</fontPath>
	    <fontSize>0.040</fontSize>
        <zIndex>999</zIndex>
     </text> 

 	  <image name="background3" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/vertical.png</path>
		 <color>ffffff</color>
         <zIndex>10</zIndex>          
      </image> 
	  
	  <image name="player" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/player.png</path>
		 <color>ffffff</color>
	     <storyboard>
         <animation property="opacity" from="0" to="1" duration="1400" mode="easeIn"/>
         </storyboard>
         <zIndex>10</zIndex>          
      </image> 

	  <image name="wallpaper1" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
		 <path>./default/_inc/wall.jpg</path>
         <path>./_inc/wallpaper1/${system.theme}.jpg</path>
		 <zIndex>1</zIndex>
     </image>

	<image name="logotype1" extra="true">
		<pos>0.25 0.01</pos>
		<maxSize>0.28 0.28</maxSize>
		<color>ffffff</color>  
		<path>./default/_inc/logo.png</path>
		<path>./_inc/logos/${system.theme}.svg</path>
		<path>./_inc/logos/${system.theme}.png</path>
	     <storyboard>
        <animation property="scale" to="1.06" begin="600" autoreverse="true" duration="1000" repeat="forever" mode="easyIn"/>
		<animation property="rotation" from= "-1.2" to="1.5" begin="600" autoreverse="true" duration="1200" repeat="forever" mode="easyIn"/>
		</storyboard>
		<zIndex>998</zIndex>
	  </image>

	       <helpsystem name="help">
	 <iconColor>FFFFFF</iconColor>
     <fontSize>0.03</fontSize>
     <origin>0.5 0.5</origin>
     <pos>0.40 0.98</pos>
     <fontPath>./_inc/FS_JC_bsicaunicode.ttf</fontPath>
     </helpsystem>
		
      <video name="backgroundvideo" extra="true">
        <default>./default/_inc/noise.mp4</default>
        <visible>true</visible>
        <path>{random}</path>               
        <pos>0.5 0.5</pos>
        <origin>0.5 0.5</origin>
        <size>1 1</size>
        <delay>0.3</delay>
        <showSnapshotNoVideo>false</showSnapshotNoVideo>
        <showSnapshotDelay>false</showSnapshotDelay>
        <color>FFFFFF</color>
        <storyboard>
        <animation property="y" from="0.05" begin="0" duration="350" mode="easeOut"/>
        <animation property="opacity" from="0" to="1" duration="350" mode="easeIn"/>
        <animation property="scale" from="0" to="1" duration="350" mode="easeOut"/>
        </storyboard>
        <zIndex>20</zIndex>
     </video>

     </view>
     </theme>
