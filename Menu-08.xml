<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>7</formatVersion>

     <view name="system">	  

<carousel name="systemcarousel">
<defaultTransition>fade</defaultTransition>
<zIndex>999</zIndex>
<maxLogoCount>1</maxLogoCount>
<color>ffffff00</color>
<colorEnd>ffffff00</colorEnd>
<color>00000000</color>
<colorEnd>00000000</colorEnd>
<logoSize>0.11 0.11</logoSize>
<logoScale>3</logoScale>
<size>1 1</size>
<pos>0 0.22</pos>
</carousel>

	       <helpsystem name="help">
	 <iconColor>FFFFFF</iconColor>
     <fontSize>0.03</fontSize>
     <origin>0.5 0.5</origin>
     <pos>0.5 0.98</pos>
     <fontPath>./_inc/FS_JC_bsicaunicode.ttf</fontPath>
     </helpsystem>

    <image name="randomboxart" extra="true">
      <path>{random:thumbnail}</path>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<maxSize>0.28 0.38</maxSize>
		<storyboard> 
        <animation property="x" from="1.01" begin="0" duration="750" mode="Bump"/>
        <animation property="scale" to="1.03" begin="1100" autoreverse="true" duration="350" repeat="forever" mode="easyIn"/>
         <animation property="opacity" from="0" to="1" duration="390" mode="linear"/>
		</storyboard>
      <zIndex>2</zIndex>
    </image>

	   <image name="wallpaper1" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
	 <path>./default/_inc/wall.jpg</path>
         <path>./_inc/wallpaper1/${system.theme}.jpg</path>
		 <zIndex>1</zIndex>
      </image>

	   <image name="menu8" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
	 <path>./default/men8-d.png</path>
         <path>./_inc/menu8frames/${system.theme}.png</path>
		 <zIndex>4</zIndex>
      </image>


      <text name="systemInfo">
	    <glowColor>000000</glowColor>
        <pos>-0.003 0.9</pos>
        <backgroundColor>00000000</backgroundColor>
        <color>ffffff</color>
        <fontPath>./_inc/fonts/FS_JC_bsicaunicode.ttf</fontPath>
	    <fontSize>0.040</fontSize>
        <zIndex>999</zIndex>
      </text> 


	  <image name="char1" extra="true">
		<pos>-0.05 0</pos>
		<maxSize>1 1</maxSize>
		<color>ffffff</color>
		<path>./default/char-d.png</path>
		<path>./${system.theme}/char.png</path>
		<zIndex>998</zIndex>
	  </image>


	 <video name="backgroundvideo8" extra="true">
        <default>./_inc/assets/noise.mp4</default>
        <visible>true</visible>
        <path>{random}</path>   
        <roundCorners>0.03</roundCorners>             
        <pos>0.82 0.75</pos>
        <size>0.32 0.32</size>
        <origin>0.5 0.5</origin>
        <showSnapshotNoVideo>true</showSnapshotNoVideo>
        <showSnapshotDelay>true</showSnapshotDelay>
        <color>FFFFFF</color>
        <zIndex>10</zIndex>
     </video>


       </view>

</theme>