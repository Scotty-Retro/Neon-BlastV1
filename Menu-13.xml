<theme>
   <formatVersion>7</formatVersion>

      <view name="system">

         <carousel name="systemcarousel">
          <zIndex>43</zIndex>	      
          <type>vertical_wheel</type>
          <pos>-0.15 0</pos>
          <size>1 1</size>
          <logoSize>0.12 0.12</logoSize>
          <color>00000000</color>
          <maxLogoCount>14</maxLogoCount>
          <logoRotation>-20</logoRotation>
          <logoRotationOrigin>1.80 0.5</logoRotationOrigin>
          <logoAlignment>center</logoAlignment>       
         </carousel>


      <text name="systemInfo">
	    <glowColor>000000</glowColor>
        <pos>0.3 0.16</pos>
        <backgroundColor>00000000</backgroundColor>
        <color>ffffff</color>
        <fontPath>./_inc/fonts/FS_JC_bsicaunicode.ttf</fontPath>
	    <fontSize>0.040</fontSize>
        <zIndex>999</zIndex>
      </text> 
	  
	   <image name="wallpaper1" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
	 <path>./default/_inc/wall.jpg</path>
         <path>./_inc/wallpaper1/${system.theme}.jpg</path>
		 <zIndex>1</zIndex>
      </image>
	 
	  <image name="char" extra="true">
		<pos>-0.05 0</pos>
		<maxSize>0.9 0.9</maxSize>
		<color>ffffff</color>
		<path>./default/char-d.png</path>
		<path>./${system.theme}/char.png</path>
		<zIndex>998</zIndex>
	  </image>

	<image name="menu13frames" extra="true">
        <pos>0.3 0.15</pos>
        <maxSize>0.85 0.85</maxSize>
        <origin>0 0</origin>
		<path>./_inc/menu2frames/menu2-d.png</path>
		<path>./_inc/menu2frames/${system.theme}.png</path>
		<color>ffffff</color>
	    <zIndex>999</zIndex>
	</image>

	<image name="black" extra="true">
        <pos>0.3 0.15</pos>
        <maxSize>0.85 0.85</maxSize>
        <origin>0 0</origin>
		<path>./_inc/menu2frames/black.png</path>
		<color>ffffff</color>
	    <zIndex>989</zIndex>
	</image>

	 <video name="backgroundvideo" extra="true">
        <default>./_inc/assets/noise.mp4</default>
        <visible>true</visible>
        <path>{random}</path>   
        <roundCorners>0.04</roundCorners>             
        <pos>0.72 0.485</pos>
        <origin>0.5 0.5</origin>
        <size>0.515 0.5</size>
        <delay>0.3</delay>
        <showSnapshotNoVideo>false</showSnapshotNoVideo>
        <showSnapshotDelay>false</showSnapshotDelay>
        <color>FFFFFF</color>
        <storyboard>
        <animation property="y" from="0.05" begin="0" duration="350" mode="easeOut"/>
        <animation property="opacity" from="0" to="1" duration="550" mode="easeIn"/>
        <animation property="scale" from="0" to="1" duration="350" mode="easeOut"/>
        </storyboard>
        <zIndex>990</zIndex>
     </video>
	  
	 	  
	       <helpsystem name="help">
	 <iconColor>FFFFFF</iconColor>
     <fontSize>0.03</fontSize>
     <origin>0.5 0.5</origin>
     <pos>0.47 0.98</pos>
     <fontPath>./_inc/FS_JC_bsicaunicode.ttf</fontPath>
     </helpsystem>
 
       </view>
    </theme>
