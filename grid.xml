<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

   <!---------------------------grid------------------------------------- -->

   <view name="grid">
	    
     <helpsystem name="help">
	 <iconColor>FFFFFF</iconColor>
     <fontSize>0.025</fontSize>
     <origin>0.5 0.5</origin>
     <pos>0.5 0.985</pos>
       <fontPath>./_inc/fonts/FS_JC_bsicaunicode.ttf</fontPath>
     </helpsystem>
	 
   
   		<image name="md_thumbnail">
			<origin>0.5 0.5</origin>
			<pos>0.87 0.77</pos>
			<maxSize>0.14 0.2</maxSize>
			<zIndex>900</zIndex>
		</image>

   		<image name="md_marquee">
			<pos>0.62 0.134</pos>
			<maxSize>0.253 0.199</maxSize>
			<origin>0.5 0.5</origin>
			<linearSmooth>true</linearSmooth>
			<zIndex>900</zIndex> 
		</image>
   	
     <video name="md_video">
		<color>ffffff</color>
		<size>0.6 0.8</size>
		<origin>0.5 0.5</origin>
		<pos>0.65 0.485</pos>
		<delay>0.5</delay>
	    <loops>3</loops>
		<effect>none</effect>		 
        <showSnapshotNoVideo>true</showSnapshotNoVideo>
        <showSnapshotDelay>true</showSnapshotDelay>
		<zIndex>3</zIndex>
     </video>

	<imagegrid name="gamegrid">
	  <pos>-0.073 0.05</pos>
      <size>0.30 0.89</size>
      <padding>0.08 0 0.08 0</padding>
      <scrollDirection>vertical</scrollDirection>
      <autoLayout>1 7</autoLayout>
      <autoLayoutSelectedZoom>1</autoLayoutSelectedZoom>
      <margin>0 0.015</margin>
      <centerSelection>true</centerSelection>
      <scrollLoop>true</scrollLoop>
      <imageSource>marquee</imageSource>
      <gameImage>./_inc/game.png</gameImage>
      <zIndex>300</zIndex>  
    </imagegrid>
 
    
<gridtile name="default">
<padding>1 1</padding>
<backgroundCenterColor>FFFFFF00</backgroundCenterColor>
<backgroundEdgeColor>FFFFFF00</backgroundEdgeColor>
<imageSizeMode>maxSize</imageSizeMode>
<imageColor>FFFFFF</imageColor>
<reflexion>0.09 0.0</reflexion>
</gridtile>

<gridtile name="selected">
<backgroundCenterColor>ff000000</backgroundCenterColor>
<backgroundEdgeColor>ff000000</backgroundEdgeColor>
<padding>55 13</padding>
<imageColor>FFFFFF</imageColor>
</gridtile>

<text name="gridtile">
<color>1C00ff00</color>
<backgroundColor>00000000</backgroundColor>
<fontSize>0.022</fontSize>
<alignment>center</alignment>
<size>1 0.24</size>
</text>

<text name="gridtile_selected">
<color>1C00ff00</color>
<glowColor>${glowColor}</glowColor>
<glowSize>0</glowSize>
</text>
	
	<image name="shadowcover01" extra="true">
		<path>./_inc/grid.png</path>
		<size>1 1</size>
		<pos>0 0</pos>
		<origin>0 0</origin>
		<zIndex>10</zIndex>
	</image>

	<image name="gridblack" extra="true">
		<path>./_inc/gridblack.png</path>
		<size>1 1</size>
		<pos>0 0</pos>
		<origin>0 0</origin>
		<zIndex>2</zIndex>
	</image>

	<video name="neonvideo" extra="true">
		<path>./default/neonloop-d2.mp4</path>
		<path>./_inc/neonloops/${system.theme}.mp4</path>
		<size>1 1</size>
		<pos>0 0</pos>
		<origin>0 0</origin>
		<zIndex>1</zIndex>
	</video>
	
	<text name="md_name">
		<fontPath>./_inc/fonts/FS_JC_bsicaunicode.ttf</fontPath>
		<fontSize>0.05</fontSize>
		<pos>0.53 0.9</pos>
		<size>0.3 0.0248148148148148</size>
		<alignment>left</alignment>
		<color>ffffff</color>
		<glowColor>10101099</glowColor>			
		<glowSize>3</glowSize>			
	</text>
	
	<image name="logo03" extra="true">
        <pos>0.845 0.1</pos>
        <maxSize>0.10 0.10</maxSize>
		<path>./default/_inc/logo.png</path>
		<path>./_inc/logos/${system.theme}.png</path>
		<color>ffffff</color>
	     <storyboard>
        <animation property="scale" to="1.06" begin="600" autoreverse="true" duration="1000" repeat="forever" mode="easyIn"/>
		<animation property="rotation" from= "-1.2" to="1.5" begin="600" autoreverse="true" duration="1200" repeat="forever" mode="easyIn"/>
		</storyboard>
	    <zIndex>400</zIndex>
	</image>
	
		<text name="logoText">
		<pos>0.691 0.444</pos>
	    <fontSize>0.11</fontSize>
		<fontPath>./_inc/fonts/FS_JC_bsicaunicode.ttf</fontPath>
	    <size>0.57 0.1</size>
		<alignment>center</alignment>
        <color>FFFFFFB3</color>
        <forceUppercase>1</forceUppercase>
	    <rotation>-90</rotation>   
	    <zIndex>999</zIndex>
    </text>	
</view>
   
   </theme>
