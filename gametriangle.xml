<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

<!---------------------------custom--------------------------------------->

<customView name="Gamelisttriangle" inherits="gamecarousel">

<gamecarousel name="gamecarousel">
<zIndex>43</zIndex>	      
<type>vertical_wheel</type>
<pos>0.34 0</pos>
<size>1 1</size>
<logoScale>1.45</logoScale>
<logoSize>0.150 0.260</logoSize>
<color>00000000</color>
<maxLogoCount>30</maxLogoCount>
<logoRotation>-8</logoRotation>
<logoRotationOrigin>3.0 0.5</logoRotationOrigin>
<logoAlignment>center</logoAlignment>   
<imageSource>marquee</imageSource>
</gamecarousel>

	   <image name="menu8" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
	 <path>./default/men8-d.png</path>
         <path>./_inc/menu8frames/${system.theme}.png</path>
		 <zIndex>3</zIndex>
      </image>

	   <image name="clearlogos" extra="true">
         <origin>0 0</origin>
         <pos>0.14 0.07</pos>
         <size>0.2 0.2</size>
         <path>./_inc/clearlogos/${system.theme}.png</path>
         <path>./_inc/clearlogos/${system.theme}.svg</path>
	   <storyboard event="activate">
	   <animation property="opacity" to="1" begin="0" duration="0" mode="linear"/>
	   <animation property="scale" from="1.1" to="1.2" begin="0" duration="1000" mode="easeOut"/>
	   </storyboard>
		 <zIndex>2</zIndex>
      </image>

	<image name="char1" extra="true">
		<pos>-0.05 0</pos>
		<maxSize>1 1</maxSize>
		<color>ffffff</color>
		<path>./default/char-d.png</path>
		<path>./${system.theme}/char.png</path>
             <storyboard>
            <animation property="x" from="0.3" to="0.8" duration="2500" autoreverse="true" begin="100" repeat="forever"/>
            </storyboard>
	    <zIndex>2</zIndex>
	</image>


	       <helpsystem name="help">
	 <iconColor>FFFFFF</iconColor>
      <fontPath>./_inc/fonts/FS_JC_bsicaunicode.ttf</fontPath>
     <fontSize>0.03</fontSize>
     <origin>0.5 0.5</origin>
     <pos>0.5 0.985</pos>
     </helpsystem>

   		<image name="md_thumbnail">
			<origin>0.5 0.5</origin>
			<pos>0.15 0.8</pos>
			<maxSize>0.2 0.3</maxSize>
		<storyboard> 
        <animation property="y" from="1.01" begin="0" duration="1000" mode="Bump"/>
        <animation property="scale" to="1.03" begin="1100" autoreverse="true" duration="350" repeat="forever" mode="easyIn"/>
		</storyboard>
			<zIndex>900</zIndex>
		</image>
	  

        <video name="md_video"> 
        <default>./_inc/assets/noise.mp4</default>	  
        <origin>0.5 0.5</origin>
        <roundCorners>0.03</roundCorners>             
        <pos>0.5 0.8</pos>
        <size>0.3 0.3</size>
        <delay>0</delay>
	<loops>3</loops>
        <showSnapshotNoVideo>true</showSnapshotNoVideo>
        <showSnapshotDelay>true</showSnapshotDelay>
        <color>FFFFFF</color>
		<zIndex>200</zIndex>
		</video>


	
	<rating name="md_rating">
        <visible>false</visible> 
	</rating>
		
	
   		<image name="carouselsquares">
                <visible>false</visible> 
		</image>

   		<image name="blackfill">
                <visible>false</visible> 
		</image>

   		<image name="char">
                <visible>false</visible> 
		</image>

		
	  <image name="md_marquee">
		<pos>0.15 0.5</pos>
		<maxSize>0.3 0.3</maxSize>
		<color>ffffff</color>
		<rotation>-4</rotation> 
       <zIndex>996</zIndex>
     </image>
   
   
	<text name="md_name">
 <visible>false</visible> 		
	</text>
	
	
	<image name="logo03" extra="true">
 <visible>false</visible> 
	</image>
	
	<text name="logoText">
 <visible>false</visible> 
    </text>
   </customView>
   
   </theme>
