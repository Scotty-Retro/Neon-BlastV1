<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

<!---------------------------custom------------------------------------- -->

 <customView name="gamebox" inherits="grid">
     	<image name="md_thumbnail">
          <visible>false</visible> 
		</image>

     	<image name="shadowcover01">
          <visible>false</visible> 
		</image>


     	<image name="logo03">
          <visible>false</visible> 
		</image>
     	<image name="gridblack">
          <visible>false</visible> 
		</image>

	<text name="md_genre">
			<size>0.10 0.10</size>
			<color>ffffff</color> <origin>0.5 0.5</origin>
			<pos>0.10 0.83</pos>
			<fontSize>0.02</fontSize>
			<fontPath>./_inc/fonts/FS_JC_bsicaunicode.ttf</fontPath>
			<zIndex>91</zIndex>  
		</text>

	<text name="md_description">
	  	<color>ffffff</color>
		<fontSize>0.024</fontSize>
		<fontPath>./_inc/fonts/FS_JC_bsicaunicode.ttf</fontPath>
		<size>0.52 0.07</size>
		<pos>0.19 0.80</pos>
    </text>

	<text name="md_name">
			<fontPath>./_inc/fonts/FS_JC_bsicaunicode.ttf</fontPath>
			<fontSize>0.04</fontSize>
			<glowColor>101010</glowColor>
			<pos>0.05 0.03</pos>
			<size>0.6875 0.0248148148148148</size>
			<alignment>left</alignment>
			<color>ffffff</color>
		</text>

	<image name="md_marquee">
		    <origin>1 0.5</origin>
			<pos>0.95 0.052</pos>
			<maxSize>0.2 0.08</maxSize>
		</image>

		<gridtile name="default">
			<size>0.22875 0.33</size>
			<backgroundColor>00000000</backgroundColor>
		</gridtile>

	<video name="boxframe" extra="true">
		<path>./default/box.mp4</path>
		<path>./_inc/boxbackgrounds/${system.theme}.mp4</path>
		<size>1 1</size>
		<pos>0 0</pos>
		<origin>0 0</origin>
		<zIndex>1</zIndex>
	</video> 
	
       <video name="md_video">
		<color>ffffff</color>
		<origin>0.5 0.5</origin>
		<pos>0.85 0.485</pos>
		<delay>999</delay>
		<effect>none</effect>		 
        <showSnapshotNoVideo>false</showSnapshotNoVideo>
        <showSnapshotDelay>false</showSnapshotDelay>
		<zIndex>1</zIndex>      
     </video>
  
    <imagegrid name="gamegrid">
		<color>000000</color>
		<pos>0 0.105</pos>
		<size>1 0.67</size>
		<autoLayout>3 2</autoLayout>
		<margin>0.1 0</margin>
		<padding>0.1 0.0025 0.1 0.001</padding>
		<autoLayoutSelectedZoom>1.05</autoLayoutSelectedZoom>
		<animateSelection>false</animateSelection>
		<imageSource>thumbnail</imageSource>
        <zIndex>300</zIndex>
    </imagegrid>

    <gridtile name="default">
      <backgroundColor>FFFFFF00</backgroundColor>
      <backgroundCornerSize>9 9</backgroundCornerSize>
      <selectionMode>video</selectionMode>
      <padding>5 5</padding>
      <imageColor>ffffff</imageColor>
      <reflexion>0.05 0.0</reflexion>
    </gridtile>
	
    <gridtile name="selected">
      <backgroundCenterColor>00000000</backgroundCenterColor>
      <backgroundEdgeColor>00000000</backgroundEdgeColor>	
      <imageColor>FFFFFFFF</imageColor>
    </gridtile>

    <ninepatch name="gridtile.background:selected">
      <animateColor>00000000</animateColor>
      <animateColorTime>350</animateColorTime>
    </ninepatch>

   <image name="gridtile.marquee">
      <origin>0 0.5</origin>
      <pos>1.02 3</pos>
      <color>00000000</color>
      <size>0.5 0.2</size>
      <reflexion>0 0</reflexion>
    </image>
	
    <image name="gridtile.marquee:selected">
     <origin>0 0.5</origin>
      <pos>1.02 0.75</pos>
      <color>FFFFFFFF</color>
      <size>0.5 0.2</size>
    </image>
	
	<image name="logo04" extra="true">
        <pos>0.79 0.78</pos>
        <maxSize>0.15 0.15</maxSize>
		<path>./default/_inc/logo.png</path>
		<path>./_inc/logos/${system.theme}.png</path>	 
		<color>ffffff</color>
	    <zIndex>400</zIndex>
	</image>
	
		<text name="logoText">
		<pos>0.697 0.444</pos>
	    <fontSize>0.09</fontSize>
		<fontPath>./_inc/fonts/FS_JC_bsicaunicode.ttf</fontPath>
	    <size>0.57 0.1</size>
		<alignment>center</alignment>
            <color>FFFFFFB3</color>
           <forceUppercase>1</forceUppercase>
	    <rotation>-90</rotation>   
	    <zIndex>999</zIndex>
    </text>
	

</customView>

   
   </theme>